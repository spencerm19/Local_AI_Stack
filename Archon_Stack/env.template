# Core Settings
SERVER_IP=localhost

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_DB=archon-stack
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here
JWT_SECRET=your_jwt_secret_here  # Generate a secure random string

# n8n Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_EDITOR_BASE_URL=http://localhost:5678
N8N_WEBHOOK_URL=http://localhost:5678
N8N_ENCRYPTION_KEY=your_encryption_key_here
N8N_JWT_SECRET=your_jwt_secret_here
N8N_SECURE_COOKIE=false

# Storage Configuration
STORAGE_BACKEND=file
FILE_STORAGE_BACKEND_PATH=/storage
STORAGE_REGION=us-west-2
STORAGE_S3_BUCKET=archon-stack

# Web UI Configuration
WEBUI_NAME=Archon AI Stack
WEBUI_PORT=3000
WEBUI_URL=http://localhost:3000
WEBUI_AUTH=true
WEBUI_SECRET_KEY=your_secret_key_here

# Service Ports
QDRANT_PORT=6333
FLOWISE_PORT=3001
OLLAMA_PORT=11434
ARCHON_PORT=8501
ARCHON_SERVICE_PORT=8100
MCP_CRAWL4AI_PORT=3002

# Flowise Configuration
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=your_secure_password_here
FLOWISE_SECRET_KEY=your_secret_key_here
FLOWISE_URL=http://localhost:3001

# Ollama Configuration
# CPU-optimized model selection - smaller models that run well on CPU
